<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the corners of the button -->
    <corners
        android:radius="12dp" />

    <!-- Define the background color of the button -->
    <solid
        android:color="@color/charcoal" />

    <!-- Optional: Define padding around the content of the button -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
